@model OnlineAuctionMVC.Models.ViewModel
@{
    ViewData["Title"] = "viewSellers";
}

<div style="background-image: url(/Images/request_bg1.jpg); background-size: cover; ">
    <center>
        <h1>Sellers & Bidders</h1>
        <br /><br/>
        <div>
            <center>
                <h4>Sellers</h4>
                <table style="width:60%;" class="table table-hover">
                    <thread>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Contact</th>
                        </tr>
                    </thread>
                    <tbody>
                        @foreach (var item in @Model.AdminSeller)
                        {
                            <tr class="table-light">
                                <td scope="row">@item.Id</td>
                                <td scope="row">@item.Name</td>
                                <td scope="row">@item.Email</td>
                                <td scope="row">@item.Contact</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </center>
        </div>
        <br />
        <br />
        <div>
            <center>
                <h4>Bidders</h4>
                <table style="width:60%;" class="table table-hover">
                    <thread>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Contact</th>
                        </tr>
                    </thread>
                    <tbody>
                        @foreach (var item in @Model.AdminBidder)
                        {
                            <tr class="table-light">
                                <td scope="row">@item.Id</td>
                                <td scope="row">@item.Name</td>
                                <td scope="row">@item.Email</td>
                                <td scope="row">@item.Contact</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </center>
        </div>
        <br/>
        <a asp-action="adminPanel">Back to Panel</a>
        <br/><br/>
    </center>
 </div>