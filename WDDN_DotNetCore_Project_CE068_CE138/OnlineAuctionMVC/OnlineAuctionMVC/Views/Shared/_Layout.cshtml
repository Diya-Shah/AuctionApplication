            <div class="container-fluid">

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav">
                        <li>
                            <img src="~/Images/Auction_logo.png" style="height:100px; width:100px; top:5px; left: 10px; position: fixed;" />

                        </li>
                        <li class="nav-item">
                            <a style="text-decoration:none;font-size:1.5em;color:white;" href="/Home/Index">
                                Home
                                <span class="visually-hidden">(current)</span>
                            </a>
                        </li>&emsp;&emsp;
                        <li class="nav-item">
                            <a style="text-decoration:none;font-size:1.5em;color:white;" href="/Extra/Contact">Contact</a>
                        </li>&emsp;&emsp;
                        <li class="nav-item">
                            <a style="text-decoration:none;font-size:1.5em;color:white;" href="/Home/Index">LogOut</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <br />
    <div style="margin-top:-23px;">
        @RenderBody()
    </div>
    @RenderSection("Scripts", required: false);
